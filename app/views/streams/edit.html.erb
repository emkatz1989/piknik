<%= form_for @stream do |f| %>
		
		<%=f.text_field :name, :class => "form-control", :placeholder => "Name"%><br>
		<%=f.text_field :description, :class => "form-control", :placeholder => "Description"%><br>
		<%=f.hidden_field :user_id, :value => current_user.id%>
		<%=f.file_field :image%> <br>

  
				<%= image_tag @stream.image.url(:square)%><br>
			
		
	

		<%= f.submit "Submit Stream"%>

<% end %>